<div class="container">
  <div class="row ">
    <div class="col-sm-7 offset-sm-3 widget">
      <div class="headline">
        <h3>Login</h3>
      </div>
      <div class="row">
        <div class="col-md-12 col-md-offset-3">
          <%= form_for(:session, url: login_path) do |f| %>

              <div class="form-group">
                <%= f.label :email %>

                <div class="controls">
                  <%= f.email_field :email, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password %>

                <div class="controls">
                  <%= f.password_field :password, class: 'form-control' %>
                </div>
              </div>

              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-success float-right' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



