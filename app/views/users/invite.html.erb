<div class="container">

  <div class="row">
    <div class="col-sm-6 offset-sm-2 widget">
      <div class="headline">
        <h3>Invite new members</h3>
      </div>
      <%= form_for @invitation, url: '/users/send' do |f| %>
          <%= render 'errors/validation_errors', errors: @invitation.errors %>

          <div class="form-group">
            <%= f.label :name, 'Name', class: 'required' %>

            <div class="controls">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email, 'Email', class: 'required' %>

            <div class="controls">
              <%= f.text_field :email, class: 'form-control' %>
            </div>
          </div>

          <input type="submit" value="Invite" class="btn btn-success float-right"/>
      <% end %>
    </div>

  </div><!-- /.row -->

</div><!-- /.container -->
