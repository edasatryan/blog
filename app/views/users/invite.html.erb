<div class="container">

  <div class="row">
    <div class="col-sm-6 offset-sm-2 widget">
      <div class="headline">
        <h3>Invite new members</h3>
      </div>
      <!--%= render 'form', user: @user %-->

      <form accept-charset="UTF-8" action="/users/send" method="post">
        <div class="form-group">
          <label for="title">Name*</label>

          <div class="controls">
            <input type="text" name="user[first_name]" value="" placeholder="Name" class="form-control" />
          </div>
        </div>
        <div class="form-group">
          <label for="title">Email*</label>

          <div class="controls">
            <input type="text" name="user[username]" value="" placeholder="Email" class="form-control"/>
          </div>
        </div>
        <input type="submit" value="Invite" class="btn btn-success float-right"/>
      </form>
    </div>

  </div><!-- /.row -->

</div><!-- /.container -->
