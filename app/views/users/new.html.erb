<div class="container">
  <div class="row ">
    <div class="col-sm-7 offset-sm-3 widget">
      <div class="headline">
        <h3>Signup</h3>
      </div>
      <div class="row">
        <div class="col-md-12 col-md-offset-3">
          <%= form_for @user do |f| %>

              <div class="form-group">
                <%= f.label :first_name, "First Name<span class='required'>*</span>".html_safe  %>

                <div class="controls">
                  <%= f.text_field :first_name, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :last_name, "Last Name<span class='required'>*</span>".html_safe  %>

                <div class="controls">
                  <%= f.text_field :last_name, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :username, "Email<span class='required'>*</span>".html_safe  %>

                <div class="controls">
                  <%= f.email_field :username, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password, "Password<span class='required'>*</span>".html_safe  %>

                <div class="controls">
                  <%= f.password_field :password, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, "Confirm Password<span class='required'>*</span>".html_safe  %>

                <div class="controls">
                  <%= f.password_field :password_confirmation, class: 'form-control' %>
                </div>
              </div>

              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-success float-right' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



