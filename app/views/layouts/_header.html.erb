<div class="container">
  <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
    <%= link_to  'HOME', '/home',class: 'navbar-brand'%>


    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
      </ul>
      <% if logged_in? %>
          <%= link_to 'Admin', admins_articles_path, class: 'btn btn-outline-success my-2 my-sm-0' %>
          <%= link_to 'Invite', users_invite_path, class: 'btn btn-outline-success my-2 my-sm-0' %>
          <p class="navbar-text navbar-right ">(<%= [current_user.first_name, current_user.last_name].join(', ') %>) <%= link_to "Logout", logout_path, :method => :delete %></p>
      <% else %>
          <%= link_to "Login", login_path, :class => "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>
    </div>
  </nav>
</div>
<div class="container">
  <div class="row">
    <div  class="col-sm-12">
      <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
  </div>
</div>